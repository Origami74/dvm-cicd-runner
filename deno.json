{
  "$schema": "https://deno.land/x/deno@v1.41.0/cli/schemas/config-file.v1.json",
  "version": "1.1.0",
  "tasks": {
    "dev": "deno run --watch main.ts"
  },
  "imports": {
    "@nostrify/nostrify": "jsr:@nostrify/nostrify@^0.30.1",
    "@std/assert": "jsr:@std/assert@1",
    "@welshman/lib": "npm:@welshman/lib@^0.0.17",
    "@welshman/util": "npm:@welshman/util@^0.0.30",
    "blossom-client-sdk": "npm:blossom-client-sdk@^1.1.1",
    "docker-cli-js": "npm:docker-cli-js@^2.10.0",
    "nostr-tools": "npm:nostr-tools@^2.7.2",
    "pino": "npm:pino@^9.4.0",
    "reflect-metadata": "npm:reflect-metadata@^0.2.2",
    "simple-git": "npm:simple-git@^3.27.0",
    "tsyringe": "npm:tsyringe@^4.8.0"
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lint": {
    "include": ["src/", "scripts/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "include": ["src/", "scripts/"],
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
